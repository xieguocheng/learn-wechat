.weui-search-bar {
  
  position: relative;
  padding: 0 5% 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efefef;

}

.weui-icon-search {
  
  margin-right: 8px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  
  left: 10px;
  top: 7px;
}

.weui-search-bar__text {
  
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 30rpx;
  background: #fff;
  margin-right: 2%;
  width: 68%;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  
  
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #efefef;
  line-height: 28px;
}

.weui-search-bar__cancel-btn {
  padding: 5rpx 25rpx;
  line-height: 28px;
  border-radius: 30rpx;
  white-space: nowrap;
  font-size: 28rpx;
  color: white;
  background: #24dd82;
}
